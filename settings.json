{
    "metals.javaHome": "/Library/Java/JavaVirtualMachines/jdk-1.8.jdk/Contents/Home",
    "java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/jdk-1.8.jdk/Contents/Home",

    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true,
        "**/.bloop": true,
        "**/.bsp": true,
        "**/.idea": true,
        "**/.vscode": true,
        "**/.metals": true,
        "**/.exercism": true
    },
    "files.associations": {
        "*.sc": "scala"
    },
    "[scala]": {
        "editor.suggestSelection": "first",
        "editor.formatOnPaste": true,
        "editor.formatOnType": true
    },
    "[yaml]": {
        "editor.defaultFormatter": "ms-azure-devops.azure-pipelines"
    },
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.suggestSelection": "first",
    "editor.fontFamily": "Source Code Pro, menlo",
    "editor.fontLigatures": "enabled",
    "editor.fontSize": 12.5,
    "editor.fontWeight": "normal",
    "editor.lineHeight": 1.45,
    "editor.bracketPairColorization.enabled": false,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": "off",
    "editor.roundedSelection": false,
    "editor.selectionHighlight": false,
    "editor.scrollBeyondLastLine": false,
    "editor.matchBrackets": "never",
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.parameterHints.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tokenColorCustomizations": {
        // "numbers": "#2247EB",
        // "comments": "#687577",
        "functions": "#BFBFBF",
        "types": "#79f011",
        // "keywords": "#2247EB",
        "variables": "#BFBFBF",
        "strings": "#d7af5f",
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "comment.line.double-slash",
                    "punctuation.definition.comment",
                ],
                "settings": {
                    "fontStyle": "",
                    // "fontStyle": "italic underline",
                    // "fontStyle": "italic bold underline",
                }
            },
            {
                "name": "BoldText",
                "scope": [
                    // "entity",
                    "entity.name.class",
                    "entity.name.function",
                    "entity.name.method",
                    "entity.name.section",
                    "entity.name.selector",
                    "entity.name.type",
                    "markup",
                    "punctuation.definition.string.begin",
                    "punctuation.definition.string.end",
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            },
            {
                "name": "ItalicText",
                "scope": [
                    "variable",
                    "entity.name.class.declaration"
                ],
                "settings": {
                    // "foreground": "#FF0000",
                    "fontStyle": "italic"
                }
            }
        ]
    },

    "explorer.decorations.colors": false,
    "explorer.openEditors.visible": 1,
    "explorer.autoReveal": "focusNoScroll",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.autoSave": "afterDelay",

    "vim.vimrc.enable": true,
    "vim.useSystemClipboard": true,
    "vim.vimrc.path": "~/.vimrc_vscode",
    "vim.enableNeovim": true,

    "terminal.integrated.fontFamily": "menlo",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.env.osx": {
        "SPARK_HOME": "/usr/local/Cellar/apache-spark/3.4.1/libexec"
    },

    "metals.bloopSbtAlreadyInstalled": true,
    "settingsSync.ignoredSettings": [
        "metals.javaHome",
        "maven.terminal.useJavaHome",
        "java.jdt.ls.java.home"
    ],

    "workbench.colorTheme": "Paper Dark",
    "workbench.editor.showIcons": false,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.editorAssociations": {
        "*.html": "default",
        "*.parquet": "default"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#393939"
    },
    "workbench.editor.wrapTabs": true,
    "workbench.activityBar.location": "top",
    "subtleBrackets.style": {
        "borderWidth": "1px",
        "borderColor": "#528BFF",
        "todohighlight.keywords": [
            {
                "text": "TODO:",
                "color": "#C678DD",
                "backgroundColor": "transparent"
            },
            {
                "text": "NOTE:",
                "color": "#C678DD",
                "backgroundColor": "transparent"
            },
            {
                "text": "FIXME:",
                "color": "#C678DD",
                "backgroundColor": "transparent"
            }
        ]
    },

    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": false,
    "gitlens.defaultDateFormat": null,
    "gitlens.defaultDateShortFormat": null,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.format": "Blame ${author}, ${agoOrDate}${' via 'pullRequest}",
    "gitlens.codeLens.scopes": [
        "document"
    ],
    "gitlens.codeLens.authors.command": "gitlens.toggleFileHeatmap",
    "gitlens.advanced.messages": {
        "suppressLineUncommittedWarning": true
    },
    "gitlens.views.branches.files.layout": "tree",
    "githubPullRequests.createOnPublishBranch": "never",
    "git.mergeEditor": false,
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "git.autofetch": true,

    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "python.languageServer": "Jedi",
    "python.analysis.extraPaths": [],
    "cSpell.userWords": [
        "pyspark"
    ],
    "material-icon-theme.files.associations": {
        "*.yml": "yaml",
    },
    "window.density.editorTabHeight": "compact",
}
